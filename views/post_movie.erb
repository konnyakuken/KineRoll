<body>
	<div class="center-vertical">
	    <div class="post center-vertical">
			<img src="<%= @movie.jacket%>">
			<p><%= @movie.title%></p>
			<p>公開日 <%= Date.parse(@movie.release.to_s)%></p>
			
			<form action="/new/post/task" method="post">
			    <input  type="hidden" name="movie_id" value=<%=@movie.id%>>
	    		<div class="form-group">
	    			<label for="date">見る予定日</label><br>
	    			<input type="datetime-local" id="date" name="date"  required>
	    		</div>
	    		<div class="form-group">
	    			<label for="cinema">観る劇場</label><br>
	    			<input type="text" id="cinema" name="cinema"  required>
	    		</div>
	    		<div class="form-group">
	    			<label for="note">一言メモ</label><br>
	    			<input type="text" id="note" name="note">
	    		</div>
	    </div>
	    		<input class="btn-flat-border  form-control" type="submit" style="width:15%;"padding:"20px;" value="保存">
			</form>
		
	</div>
</body>